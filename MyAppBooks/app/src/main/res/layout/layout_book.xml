<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/Custom_img"
        android:layout_width="126dp"
        android:layout_height="145dp"
        android:padding="10dp"></ImageView>

    <TextView
        android:id="@+id/txtCustomName"
        android:layout_width="222dp"
        android:layout_height="29dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#FF3300"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@+id/Custom_img"></TextView>

    <TextView
        android:id="@+id/txtCustomDesc"
        android:layout_width="272dp"
        android:layout_height="49dp"
        android:layout_below="@+id/txtCustomName"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@+id/Custom_img"
        android:inputType="textMultiLine"></TextView>

    <TextView
        android:id="@+id/txt_Price"
        android:layout_width="212dp"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCustomDesc"
        android:layout_alignBottom="@+id/txtCustomDesc"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="-32dp"
        android:layout_toEndOf="@+id/Custom_img" />

</RelativeLayout>